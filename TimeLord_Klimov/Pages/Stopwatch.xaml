<Page x:Class="TimeLord_Klimov.Pages.Stopwatch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeLord_Klimov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="782" MinHeight="410" MinWidth="782" MaxHeight="410" MaxWidth="782"
      Title="Stopwatch">

    <Grid Background="PeachPuff">
        <Label Content="Секундомер" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Foreground="DarkSlateGray" FontSize="20" FontWeight="Bold"/>
        <Label x:Name="time" Content="00.00.00"
               Margin="136,131,460,205" Foreground="DarkSlateGray" FontSize="48"/>
        <Button x:Name="start" Click="StartStopwatch" Content="Начать" HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="41,284,0,0" Width="100" Height="25" Background="White" Foreground="DarkSlateGray"/>
        <Button Content="Интервал" x:Name="remember" Click="RecordTime" HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="171,284,0,0" Width="100" Height="25" Background="White" Foreground="DarkSlateGray"/>
        <ListView x:Name="lv_seconswitch" Margin="478,0,0,0" FontSize="25">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Записанное время" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Перейти к таймеру" Click="GoToTimer" HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="301,284,0,0" Width="120" Height="25" Background="White" Foreground="DarkSlateGray"/>
    </Grid>
</Page>
