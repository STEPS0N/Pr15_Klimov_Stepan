<Page x:Class="TimeLord_Klimov.Pages.Timer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeLord_Klimov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="782" MinHeight="410" MinWidth="782" MaxHeight="410" MaxWidth="782"
      Title="Timer">

    <Grid Background="PeachPuff">
        <Label Content="Таймер" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Foreground="DarkSlateGray" FontSize="20" FontWeight="Bold"/>
        <Label Content="Введите время:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="114,158,0,0" Foreground="DarkSlateGray" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="reg_text" HorizontalAlignment="Left" Margin="114,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" Height="32" FontSize="20"/>
        <Label x:Name="time" Content="00.00.00"
           Margin="447,105,149,231" Foreground="DarkSlateGray" FontSize="48"/>
        <Button x:Name="start" Click="StartTimer" Content="Начать" HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="421,252,0,0" Width="100" Height="25" Background="White" Foreground="DarkSlateGray"/>
        <Button Content="Перейти к секундомеру" Click="GoToStopwatch" HorizontalAlignment="Left" VerticalAlignment="Top"
            Margin="540,252,0,0" Width="151" Height="25" Background="White" Foreground="DarkSlateGray"/>
        <Button Content="Сбросить" Click="ResetTimer" HorizontalAlignment="Left" VerticalAlignment="Top"
            Margin="500,292,0,0" Width="80" Height="25" Background="White" Foreground="DarkSlateGray"/>
    </Grid>
</Page>
