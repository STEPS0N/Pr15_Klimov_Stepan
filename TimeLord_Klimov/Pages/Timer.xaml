<Page x:Class="TimeLord_Klimov.Pages.Timer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeLord_Klimov.Pages"
      mc:Ignorable="d" 
      Height="450" Width="800" MinHeight="450" MinWidth="800"
      Title="Timer">

    <Grid Background="PeachPuff">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Таймер" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0" 
               Foreground="DarkSlateGray" FontSize="20" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите время:" HorizontalAlignment="Center" 
                   Foreground="DarkSlateGray" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox x:Name="reg_text" Text="00:00:00" HorizontalAlignment="Center" 
                     TextWrapping="Wrap" Width="203" Height="32" FontSize="20" Margin="0,0,0,30"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="time" Content="00:00:00" HorizontalAlignment="Center"
                   Foreground="DarkSlateGray" FontSize="48" Margin="0,0,0,30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="start" Click="StartTimer" Content="Начать" 
                       Width="100" Height="30" Background="White" Foreground="DarkSlateGray" Margin="5"/>
                <Button Content="Сбросить" Click="ResetTimer" 
                       Width="80" Height="30" Background="White" Foreground="DarkSlateGray" Margin="5"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="Перейти к секундомеру" Click="GoToStopwatch" 
                   Width="151" Height="30" Background="White" Foreground="DarkSlateGray" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
